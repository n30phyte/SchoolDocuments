<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_experiment_description"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="24dp"

        android:ems="10"

        android:gravity="start|top"
        android:hint="@string/newExperimentDescription"

        android:importantForAutofill="no"
        android:inputType="textNoSuggestions"

        android:maxLength="40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_experiment_date"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="24dp"

        android:ems="10"

        android:hint="YYYY-MM-DD"

        android:importantForAutofill="no"
        android:inputType="date"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_experiment_description"
        tools:ignore="HardcodedText" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_experiment_data"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/et_experiment_date">

        <TextView
            android:id="@+id/tv_trial_count"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="24dp"

            android:textSize="24sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_pass_rate"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="12dp"

            android:layout_marginTop="80dp"

            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_trial_count" />

        <TextView
            android:id="@+id/tv_pass_count"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="48dp"
            android:layout_marginEnd="100dp"

            android:textSize="24sp"

            app:layout_constraintEnd_toEndOf="@id/layout_experiment_data"
            app:layout_constraintTop_toBottomOf="@id/tv_pass_rate"
            tools:layout_editor_absoluteX="243dp" />

        <TextView
            android:id="@+id/tv_fail_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="100dp"
            android:layout_marginTop="48dp"

            android:textSize="24sp"

            app:layout_constraintStart_toStartOf="@id/layout_experiment_data"
            app:layout_constraintTop_toBottomOf="@id/tv_pass_rate" />


        <Button
            android:id="@+id/btn_experiment_pass"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="76dp"

            android:text="@string/pass"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_pass_count" />

        <Button
            android:id="@+id/btn_experiment_fail"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="76dp"

            android:text="@string/fail"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_fail_count" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_save"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="30dp"
        android:text="@string/saveExperimentText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_experiment_data" />


</androidx.constraintlayout.widget.ConstraintLayout>