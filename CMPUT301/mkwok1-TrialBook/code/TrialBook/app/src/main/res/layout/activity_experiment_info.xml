<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_info_description"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="24dp"

        android:ems="10"

        android:gravity="start|top"
        android:hint="@string/newExperimentDescription"

        android:importantForAutofill="no"
        android:inputType="textNoSuggestions"

        android:maxLength="40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_info_date"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="24dp"

        android:ems="10"

        android:hint="YYYY-MM-DD"

        android:importantForAutofill="no"
        android:inputType="date"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_info_description" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_info_data"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/et_info_date">

        <TextView
            android:id="@+id/tv_info_trials"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="24dp"

            android:textSize="24sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_info_rate"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="12dp"

            android:layout_marginTop="80dp"

            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_info_trials" />

        <TextView
            android:id="@+id/tv_info_pass"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="48dp"
            android:layout_marginEnd="100dp"

            android:textSize="24sp"

            app:layout_constraintEnd_toEndOf="@id/cl_info_data"
            app:layout_constraintTop_toBottomOf="@id/tv_info_rate" />

        <TextView
            android:id="@+id/tv_info_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="100dp"
            android:layout_marginTop="48dp"

            android:textSize="24sp"

            app:layout_constraintStart_toStartOf="@id/cl_info_data"
            app:layout_constraintTop_toBottomOf="@id/tv_info_rate" />


        <Button
            android:id="@+id/btn_info_pass"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="76dp"

            android:text="@string/pass"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_info_pass" />

        <Button
            android:id="@+id/btn_info_fail"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="76dp"

            android:text="@string/fail"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_info_fail" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_info_save"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="30dp"
        android:text="@string/saveExperimentText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_info_data" />


</androidx.constraintlayout.widget.ConstraintLayout>