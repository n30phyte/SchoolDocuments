{
  "editor.rulers": [120],
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk",
      "tools": ["latexmk"]
    }
  ],
  "latex-workshop.latex.rootFile.useSubFile": false,
  "latex-workshop.latex.outDir": "%DIR%/obj/",
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-shell-escape",
        "-synctex=1",
        "-lualatex",
        "-file-line-error",
        "-interaction=nonstopmode",
        "-outdir=%OUTDIR%",
        "%DOC%"
      ]
    }
  ],
  "[tex]": {
    "editor.wordWrapColumn": 80,
    "editor.wordWrap": "bounded",
    },
    "grammarly.overrides": [
      {
        "files": [
          "**/Labs/Lab1/doc/report.tex"
        ],
        "config": {
          "audience": "expert",
          "dialect": "british",
          "domain": "technical",
          "emotions": [
            "neutral",
            "confident",
            "analytical"
          ],
          "goals": [
            "inform"
          ]
        }
      }
    ]
}
